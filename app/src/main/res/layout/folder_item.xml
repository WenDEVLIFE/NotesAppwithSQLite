<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/cardNewColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:backgroundTint="@color/white"
                android:layout_height="50dp"
                app:srcCompat="@drawable/folder" />

            <TextView
                android:id="@+id/tvShowTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@id/imageView2"
                android:layout_centerVertical="true"
                android:fontFamily="@font/product_sans_bold"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivNoteEdit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@id/ivDeleteNote"
                android:layout_centerInParent="true"
                android:layout_marginEnd="35dp"
                android:src="@drawable/baseline_update_24" />

            <ImageView
                android:id="@+id/ivDeleteNote"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_delete_24" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvShowDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/poppins"
            android:maxLines="1"
            android:text="Date Created: January 1, 2025"
            android:textColor="@color/white"
            android:textStyle="italic" />

    </LinearLayout>

</androidx.cardview.widget.CardView>